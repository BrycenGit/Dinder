
<h1 class="text-white display-4 d-inline">New Message:</h1>

<%= form_for @message, :html => { :class => 'form-messages'} do |f| %>
  <%= f.text_area :body, size: "52x5", placeholder: "Say something..." %>
  
  <br>
  <h3 class="text-white display-4 d-inline"> Recipients: </h3>
  <br>
  

  <% @recipients.each do |user| %>
    <div class="inputGroupMessages">

      <input id="user_ids<%= user.id %>" name="user_ids[]" type="checkbox" value=<%= user.id %>/>
      <label for="user_ids<%= user.id %>"><%= user.name %></label>
    </div>
    <% end %>

  <%= submit_tag 'Submit' %>
<%end %>