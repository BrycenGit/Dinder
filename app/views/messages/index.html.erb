<h1>Messages</h1>
<h4><%= current_user.name %>
<hr>
<% if @messages.any? %>
  <%# <div class="card" style="width: 100%;"> %>
    
    <% @messages.each do |message| %>
    <div class="card card-shadow p-4">
        <p class="lead text-dark">Sender: <%= link_to message.message.sender.name, message_path(message.message) %></p>
        <hr>
        <p class="lead text-dark"><%= message.message.body %></p>

      <%= form_tag '/messages/destroy', method: :post do %>
        <%= hidden_field_tag 'recipient_id', message.id %>
        <%= submit_tag 'delete', class: 'btn btn-success'%>
      <% end %>
      <%= form_tag '/messages/reply', method: :post do %>
        <%= hidden_field_tag 'user_id', message.message.sender.id %>
        <%= submit_tag 'reply', class: 'btn btn-success'%>
      <% end %>

     </div>   
    <% end %>
    
<% else %>
<div class="card card-shadow p-4">
<p class="lead text-dark">You have no messages.</p>

</div>
<% end %>
<hr>
<h4><%= link_to 'New Message', new_message_path,  class: 'btn btn-danger'%></h4>

