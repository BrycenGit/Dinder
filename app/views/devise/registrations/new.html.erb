<br>
<div class="card p-4 w-50 mx-auto text-center">
  <h2 class="display-4">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "Sign Up", class:'btn lead', style: 'background-color:#A8D0DB; outline:#FB6376' %>
    </div>
  <% end %>
  <br>

  <%= render "devise/shared/links" %>
</div>