<br>
<div class="card p-4 w-50 mx-auto text-center">
  <h2 class="display-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mx-auto', style: 'width: 40%' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :bio %> <br>
      <%= f.text_area :bio, class: 'form-control mx-auto', style: 'width: 40%' %>
    </div>
    <br>

    <div class="field"> <i><b>(Upload profile picture!) </i></b> <br>
      <%= f.file_field :avatar, class: 'form-control mx-auto border-0', style: 'width: 40%' %>
    </div> 
    <br>
    <br>
    
    <div class="actions">
      <%= f.submit "Update Account", class:'btn lead', style: 'background-color:#A8D0DB; outline:#FB6376' %> <br>
    </div>

  <% end %>
  <hr>
  <h3 class="display-4">Cancel My Account</h3>

  <p class="text-dark">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn lead', style: 'background-color:#FB6376; outline:#FB6376' %></p>

  <%= link_to "Back", :back %>
</div>